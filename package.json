{
    "name": "swagger-portal",
    "version": "0.1.0",
    "description": "A lightweight, minimalistic OpenAPI/Swagger documentation portal built with Alpine.js and TailwindCSS. Organize and display multiple APIs from different domains without any backend dependencies.",
    "scripts": {
        "dev": "vite",
        "build": "vite build --base='/openapi-swagger-portal'",
        "preview": "vite preview"
    },
    "keywords": [
        "swagger",
        "openapi",
        "api-documentation",
        "swagger-ui",
        "alpine.js",
        "tailwindcss",
        "documentation-portal",
        "api-portal",
        "frontend",
        "lightweight",
        "zero-build",
        "responsive"
    ],
    "author": {
        "name": "vzsoares",
        "url": "https://github.com/vzsoares"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vzsoares/swagger-portal.git"
    },
    "homepage": "https://github.com/vzsoares/swagger-portal",
    "bugs": {
        "url": "https://github.com/vzsoares/swagger-portal/issues"
    },
    "main": "index.html",
    "engines": {
        "node": ">=14.0.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.0.13",
        "@types/alpinejs": "^3.13.11",
        "@types/swagger-ui": "^5.21.1",
        "alpinejs": "^3.13.0",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.24",
        "release-it": "^19.0.4",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.8.2",
        "vite": "^4.3.9"
    },
    "dependencies": {
        "swagger-ui": "^5.27.1"
    },
    "release-it": {
        "git": {
            "push": true
        },
        "github": {
            "release": true,
            "releaseName": "Release ${version}"
        },
        "npm": {
            "publish": false
        }
    }
}
